<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Views.ForgotPasswordView"
             Title="ForgotPasswordView">

    <Grid RowDefinitions=".3*,.7*">
        <!-- Header con fondo -->
        <Image Aspect="AspectFill" Source="fondofisc.jpg"/>
        <Grid BackgroundColor="Green" Opacity=".9"/>
        <Grid ColumnDefinitions="*,*">
            <Image Aspect="AspectFit"
                   HeightRequest="120"
                   Source="logofisc.png"/>
        </Grid>

        <!-- Contenido principal -->
        <Grid Grid.Row="1">
            <RoundRectangle Margin="-5,-30,-5,-2"
                            CornerRadius="30,30,0,0"
                            Fill="White"/>
            <VerticalStackLayout Margin="30,0,30,0">
                <Label FontAttributes="Bold"
                       FontFamily="bold"
                       FontSize="Medium"
                       Text="Forgot Password?"
                       TextColor="#2D2D2D"/>
                <Label FontFamily="medium"
                       Text="Enter your email to receive a recovery code"
                       TextColor="#A3A3A4"/>

                <!-- Email Input -->
                <Grid Margin="0,30,0,0" ColumnDefinitions=".2*,.8*">
                    <RoundRectangle BackgroundColor="#EDEBF6"
                                    CornerRadius="10"
                                    HeightRequest="60"
                                    HorizontalOptions="Center"
                                    VerticalOptions="Center"
                                    WidthRequest="60"/>
                    <Image HorizontalOptions="Center">
                        <Image.Source>
                            <FontImageSource
                                FontFamily="AwesomeSolid"
                                Glyph="&#xf0e0;"
                                Size="44"
                                Color="Green"/>
                        </Image.Source>
                    </Image>
                    <Entry Grid.Column="1"
                           Placeholder="EMAIL"
                           Keyboard="Email"
                           Text="{Binding Email}"
                           VerticalOptions="Center"/>
                </Grid>

                <!-- Botón Send Recovery Code -->
                <Button Margin="0,30,0,0"
                        BackgroundColor="Green"
                        HeightRequest="60"
                        Text="Send Recovery Code"
                        TextColor="#FBFDF6"
                        Command="{Binding SendRecoveryCodeCommand}"/>

                <!-- Indicador de carga -->
                <ActivityIndicator IsRunning="{Binding IsBusy}"
                                   IsVisible="{Binding IsBusy}"
                                   Color="Green"
                                   Margin="0,10,0,0"/>

                <!-- Mensaje del token (visible solo cuando se genera) -->
                <Frame IsVisible="{Binding ShowTokenSent}"
                       Margin="0,20,0,0"
                       Padding="15"
                       BackgroundColor="#E8F5E9"
                       BorderColor="Green"
                       CornerRadius="10">
                    <VerticalStackLayout>
                        <Label Text="Recovery Code:"
                               FontAttributes="Bold"
                               TextColor="#2D2D2D"
                               Margin="0,0,0,5"/>
                        <Label Text="{Binding RecoveryToken}"
                               FontFamily="Courier"
                               FontSize="14"
                               TextColor="Green"
                               LineBreakMode="WordWrap"/>
                        <Label Text="(Code expires in 1 hour)"
                               FontSize="12"
                               TextColor="#666"
                               Margin="0,5,0,0"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- Botón Back to Login -->
                <Button Margin="0,20,0,0"
                        BackgroundColor="#FBFDF6"
                        HeightRequest="60"
                        Text="Back to Login"
                        TextColor="Green"
                        Command="{Binding BackToLoginCommand}"/>
            </VerticalStackLayout>
        </Grid>
    </Grid>
</ContentPage>