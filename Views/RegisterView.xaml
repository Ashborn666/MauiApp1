<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Views.RegisterView"
             Title="RegisterView">

    <Grid RowDefinitions=".3*,.7*">
        <!-- Header con fondo -->
        <Image Aspect="AspectFill" Source="fondofisc.jpg"/>
        <Grid BackgroundColor="Green" Opacity=".9"/>
        <Grid ColumnDefinitions="*,*">
            <Image Aspect="AspectFit"
                   HeightRequest="120"
                   Source="logofisc.png"/>
        </Grid>

        <!-- Contenido principal -->
        <Grid Grid.Row="1">
            <RoundRectangle Margin="-5,-30,-5,-2"
                            CornerRadius="30,30,0,0"
                            Fill="White"/>
            <ScrollView>
                <VerticalStackLayout Margin="30,0,30,0">
                    <Label FontAttributes="Bold"
                           FontFamily="bold"
                           FontSize="Medium"
                           Text="Create Account"
                           TextColor="#2D2D2D"/>
                    <Label FontFamily="medium"
                           Text="Sign up to get started"
                           TextColor="#A3A3A4"/>

                    <!-- Name Input -->
                    <Grid Margin="0,30,0,0" ColumnDefinitions=".2*,.8*">
                        <RoundRectangle BackgroundColor="#EDEBF6"
                                        CornerRadius="10"
                                        HeightRequest="60"
                                        HorizontalOptions="Center"
                                        VerticalOptions="Center"
                                        WidthRequest="60"/>
                        <Image HorizontalOptions="Center">
                            <Image.Source>
                                <FontImageSource
                                    FontFamily="AwesomeSolid"
                                    Glyph="&#xf007;"
                                    Size="44"
                                    Color="Green"/>
                            </Image.Source>
                        </Image>
                        <Entry Grid.Column="1"
                               Placeholder="FULL NAME"
                               Text="{Binding Name}"
                               VerticalOptions="Center"/>
                    </Grid>

                    <!-- Email Input -->
                    <Grid Margin="0,20,0,0" ColumnDefinitions=".2*,.8*">
                        <RoundRectangle BackgroundColor="#EDEBF6"
                                        CornerRadius="10"
                                        HeightRequest="60"
                                        HorizontalOptions="Center"
                                        VerticalOptions="Center"
                                        WidthRequest="60"/>
                        <Image HorizontalOptions="Center">
                            <Image.Source>
                                <FontImageSource
                                    FontFamily="AwesomeSolid"
                                    Glyph="&#xf0e0;"
                                    Size="44"
                                    Color="Green"/>
                            </Image.Source>
                        </Image>
                        <Entry Grid.Column="1"
                               Placeholder="EMAIL"
                               Keyboard="Email"
                               Text="{Binding Email}"
                               VerticalOptions="Center"/>
                    </Grid>

                    <!-- Password Input -->
                    <Grid Margin="0,20,0,0" ColumnDefinitions=".2*,.8*">
                        <RoundRectangle BackgroundColor="#EDEBF6"
                                        CornerRadius="10"
                                        HeightRequest="60"
                                        HorizontalOptions="Center"
                                        VerticalOptions="Center"
                                        WidthRequest="60"/>
                        <Image HorizontalOptions="Center">
                            <Image.Source>
                                <FontImageSource
                                    FontFamily="AwesomeSolid"
                                    Glyph="&#xf084;"
                                    Size="44"
                                    Color="Green"/>
                            </Image.Source>
                        </Image>
                        <Entry Grid.Column="1"
                               Placeholder="PASSWORD"
                               IsPassword="True"
                               Text="{Binding Password}"
                               VerticalOptions="Center"/>
                    </Grid>

                    <!-- Botón Create Account -->
                    <Button Margin="0,30,0,0"
                            BackgroundColor="Green"
                            HeightRequest="60"
                            Text="Create Account"
                            TextColor="#FBFDF6"
                            Command="{Binding CreateAccountCommand}"/>

                    <!-- Indicador de carga -->
                    <ActivityIndicator IsRunning="{Binding IsBusy}"
                                       IsVisible="{Binding IsBusy}"
                                       Color="Green"
                                       Margin="0,10,0,0"/>

                    <!-- Botón Back to Login -->
                    <Button Margin="0,20,0,30"
                            BackgroundColor="#FBFDF6"
                            HeightRequest="60"
                            Text="Back to Login"
                            TextColor="Green"
                            Command="{Binding BackToLoginCommand}"/>
                </VerticalStackLayout>
            </ScrollView>
        </Grid>
    </Grid>
</ContentPage>