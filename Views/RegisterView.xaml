<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Views.RegisterView"
             Shell.NavBarIsVisible="False"
             BackgroundColor="White">

    <Grid RowDefinitions="260,*">

        <!-- 游릭 ENCABEZADO CON GRADIENTE (IGUAL AL LOGIN) -->
        <Grid Grid.Row="0">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#0A8A2A" Offset="0.0" />
                    <GradientStop Color="#0F9B30" Offset="1.0" />
                </LinearGradientBrush>
            </Grid.Background>

            <VerticalStackLayout VerticalOptions="Center"
                                 HorizontalOptions="Center">
                <Image Source="logofisc.png"
                       HeightRequest="110"
                       Aspect="AspectFit" />
                <Label Text="Crear Cuenta"
                       FontSize="26"
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalOptions="Center"
                       Margin="0,10,0,0"/>
            </VerticalStackLayout>
        </Grid>


        <!-- 游리 CONTENEDOR PRINCIPAL (IGUAL AL LOGIN MODERNO) -->
        <Border Grid.Row="1"
                StrokeThickness="0"
                BackgroundColor="White"
                StrokeShape="RoundRectangle 30,30,0,0"
                Padding="30,25,30,0">

            <ScrollView>
                <VerticalStackLayout Spacing="25">

                    <Label Text="Reg칤strate 游녦"
                           FontSize="18"
                           TextColor="#444"
                           HorizontalOptions="Center"/>

                    <!-- 游릭 NOMBRE -->
                    <VerticalStackLayout>
                        <Label Text="Nombre completo"
                               FontSize="14"
                               TextColor="#666"/>
                        <Entry Placeholder="Introduce tu nombre"
                               Text="{Binding Name}"
                               FontSize="16"
                               BackgroundColor="Transparent"
                               TextColor="Black"/>
                    </VerticalStackLayout>

                    <!-- 游릭 EMAIL -->
                    <VerticalStackLayout>
                        <Label Text="Correo electr칩nico"
                               FontSize="14"
                               TextColor="#666"/>
                        <Entry Placeholder="email@ejemplo.com"
                               Text="{Binding Email}"
                               Keyboard="Email"
                               FontSize="16"
                               BackgroundColor="Transparent"
                               TextColor="Black"/>
                    </VerticalStackLayout>

                    <!-- 游릭 PASSWORD -->
                    <VerticalStackLayout>
                        <Label Text="Contrase침a"
                               FontSize="14"
                               TextColor="#666"/>
                        <Entry Placeholder="********"
                               IsPassword="True"
                               Text="{Binding Password}"
                               FontSize="16"
                               BackgroundColor="Transparent"
                               TextColor="Black"/>
                    </VerticalStackLayout>


                    <!-- 游릴 BOT칍N CREAR CUENTA -->
                    <Button Text="Crear Cuenta"
                            HeightRequest="55"
                            CornerRadius="12"
                            FontSize="18"
                            TextColor="White"
                            BackgroundColor="#0A8A2A"
                            Command="{Binding CreateAccountCommand}" />

                    <!-- Loader -->
                    <ActivityIndicator IsRunning="{Binding IsBusy}"
                                       IsVisible="{Binding IsBusy}"
                                       Color="#0A8A2A"/>

                    <!-- 游댗 Volver al login -->
                    <Button Text="Volver al inicio"
                            HeightRequest="55"
                            CornerRadius="12"
                            BackgroundColor="#E8F5E9"
                            TextColor="#0A8A2A"
                            FontSize="17"
                            Command="{Binding BackToLoginCommand}" />

                </VerticalStackLayout>
            </ScrollView>

        </Border>

    </Grid>

</ContentPage>
