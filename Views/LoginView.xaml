<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Views.LoginView"
             Shell.NavBarIsVisible="False"
             BackgroundColor="#FFFFFF">

    <Grid RowDefinitions="260,*">

        <!-- 游댯 ENCABEZADO MODERNO CON GRADIENTE -->
        <Grid Grid.Row="0">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#0A8A2A" Offset="0.0" />
                    <GradientStop Color="#0F9B30" Offset="1.0" />
                </LinearGradientBrush>
            </Grid.Background>

            <!-- Logo centrado -->
            <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center">
                <Image Source="logofisc.png"
                       HeightRequest="110"
                       Margin="0,10,0,0"
                       Aspect="AspectFit"/>
                <Label Text="Inicia Sesi칩n"
                       FontSize="26"
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalOptions="Center"
                       Margin="0,10,0,0"/>
            </VerticalStackLayout>
        </Grid>


        <!-- 游댰 CONTENEDOR PRINCIPAL MODERNO -->
        <Border Grid.Row="1"
                StrokeThickness="0"
                BackgroundColor="White"
                StrokeShape="RoundRectangle 30,30,0,0"
                Padding="30,25,30,0">

            <VerticalStackLayout Spacing="25">

                <!-- T칤tulo peque침o secundario -->
                <Label Text="Bienvenido de nuevo 游녦"
                       FontSize="18"
                       TextColor="#444"
                       HorizontalOptions="Center"/>

                <!-- 游릭 INPUT EMAIL -->
                <Grid Margin="0,5,0,0" ColumnDefinitions="Auto,*" VerticalOptions="Center">
                    <Entry Grid.Column="1"
                       Placeholder="EMAIL"
                       Text="{Binding Email}"
                       Keyboard="Email"
                       FontSize="16"
                       BackgroundColor="Transparent"
                       TextColor="Black"/>
                </Grid>


                <!-- 游댏 INPUT PASSWORD -->
                <Grid Margin="0,0,0,0" ColumnDefinitions="Auto,*" VerticalOptions="Center">
                    <Entry Grid.Column="1"
                       Placeholder="PASSWORD"
                       Text="{Binding Password}"
                       IsPassword="True"
                       FontSize="16"
                       BackgroundColor="Transparent"
                       TextColor="Black"/>
                </Grid>


                <!-- 游릭 BOT칍N LOGIN MODERNO -->
                <Button Text="Iniciar Sesi칩n"
                        HeightRequest="55"
                        CornerRadius="12"
                        FontSize="18"
                        TextColor="White"
                        BackgroundColor="#0A8A2A"
                        Command="{Binding LoginCommand}" />

                <!-- Loader -->
                <ActivityIndicator IsRunning="{Binding IsBusy}"
                                   IsVisible="{Binding IsBusy}"
                                   Color="#0A8A2A"/>


                <!-- 游댕 쯆LVIDASTE TU CONTRASE칌A? -->
                <Label Text="쯆lvidaste tu contrase침a?"
                       FontSize="14"
                       TextColor="#0A8A2A"
                       HorizontalOptions="Center">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding ForgotPasswordCommand}" />
                    </Label.GestureRecognizers>
                </Label>


                <!-- 游리 BOT칍N CREAR CUENTA -->
                <Button Text="Crear tu cuenta"
                        HeightRequest="55"
                        CornerRadius="12"
                        BackgroundColor="#E8F5E9"
                        TextColor="#0A8A2A"
                        FontSize="17"
                        Command="{Binding CreateAccountCommand}" />

            </VerticalStackLayout>

        </Border>
    </Grid>

</ContentPage>
