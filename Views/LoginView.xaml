<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Views.LoginView"
             Title="LoginView">

    <Grid RowDefinitions=".3*,.7*">
        <Image Aspect="AspectFill" Source="fondofisc.jpg"/>
        <Grid BackgroundColor="Green"  Opacity=".9"/>
        <Grid ColumnDefinitions="*,*">
            <Image Aspect="AspectFit"
                   HeightRequest="120"
                   Source="logofisc.png"/>
        </Grid>
        <Grid Grid.Row="1">
            <RoundRectangle Margin="-5,-30,-5,-2"
                            CornerRadius="30,30,0,0"
                            Fill="White"/>
            <VerticalStackLayout Margin="30,0,30,0">
                <Label FontAttributes="Bold"
                       FontFamily="bold"
                       FontSize="Medium"
                       Text="Welcome!"
                       TextColor="#2D2D2D"/>
                <Label FontFamily="medium"
                       Text="Log in to continue"
                       TextColor="#A3A3A4"/>
                <Grid Margin="0,30,0,0" ColumnDefinitions=".2*,.8*">
                    <RoundRectangle BackgroundColor="#EDEBF6"
                                    CornerRadius="10"
                                    HeightRequest="60"
                                    HorizontalOptions="Center"
                                    VerticalOptions="Center"
                                    WidthRequest="60"/>
                    <Image HorizontalOptions="Center">
                        <Image.Source>
                            <FontImageSource
                                FontFamily="AwesomeSolid"
                                Glyph="&#xf0e0;"
                                Size="44"
                                Color="Green"/>
                        </Image.Source>
                    </Image>
                    <Entry Grid.Column="1"
                           Placeholder="EMAIL"
                           Text="edrian.hiraldo@utp.ac.pa"
                           VerticalOptions="Center"/>
                </Grid>
                <Grid Margin="0,30,0,0" ColumnDefinitions=".2*,.8*">
                            <RoundRectangle BackgroundColor="#EDEBF6"
                    CornerRadius="10"
                    HeightRequest="60"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    WidthRequest="60"/>
                            <Image HorizontalOptions="Center">
                                <Image.Source>
                                    <FontImageSource
                FontFamily="AwesomeSolid"
                Glyph="&#xf084;"
                Size="44"
                Color="Green"/>
                                </Image.Source>
                            </Image>
                    <Entry Grid.Column="1"
           Placeholder="PASSWORD"
           IsPassword="True"
           Text="12345"
           VerticalOptions="Center"/>
                </Grid>
                                <Button
                        Margin="0,20,0,0"
                        BackgroundColor="Green"
                        HeightRequest="60"
                        Text="Login"
                        TextColor="#FBFDF6"/>

                                <Label Margin="0,20,0,-10"
                           HorizontalOptions="Center"
                           Text="Forgot your password?"
                           TextColor="Green"
                           TextDecorations="Underline"/>

                                <Button Margin="0,30,0,0"
                            BackgroundColor="#FBFDF6"
                            HeightRequest="60"
                            Text="Create your Account"
                            TextColor="Green"/>
            </VerticalStackLayout>
        </Grid>
    </Grid>
    
</ContentPage>